<?xml version="1.0" encoding="gb2312"?>
<quartz>
	<job>
		<job-detail>
			<name>updateChanel</name>
			<mydescription>定时更新前台栏目页面</mydescription>
			<group>groupOne</group>
			<job-class>com.rbt.timerTask.UpdateChannelJob</job-class>
		</job-detail>
		<trigger>        
			<cron>
				<name>triggerUpdateChannel</name>
				<group>groupOne</group>
				<job-name>updateChanel</job-name>
				<job-group>groupOne</job-group>
				<cron-expression>0 0 1 * * ? </cron-expression>
			</cron>
		</trigger>
	</job>
	<job>
		<job-detail>
			<name>SendSubscribe</name>
			<mydescription>商机订阅自动发送信息</mydescription>
			<group>groupTwo</group>
			<job-class>com.rbt.timerTask.SendSubscribeJob</job-class>
		</job-detail>
		<trigger>
			<cron>
				<name>triggerSendSubscribe</name>
				<group>groupTwo</group>
				<job-name>SendSubscribe</job-name>
				<job-group>groupTwo</job-group>
				<cron-expression>0 0 1 * * ? </cron-expression>
			</cron>
		</trigger>
	</job>
    	<job>
		<job-detail>
			<name>triggerUpdateOrder</name>
			<mydescription>自动跟新订单状态</mydescription>
			<group>groupThree</group>
			<job-class>com.rbt.timerTask.UpdateOrderState</job-class>
		</job-detail>
		<trigger>
			<cron>
				<name>triggerUpdateOrder</name>
				<group>groupThree</group>
				<job-name>UpdateOrder</job-name>
				<job-group>groupThree</job-group>
				<cron-expression>0 0 1 * * ? </cron-expression>
			</cron>
		</trigger>
	</job>
	
	<job>
		<job-detail>
			<name>triggerMemberVipShip</name>
			<mydescription>会员年限VIP加分</mydescription>
			<group>groupFour</group>
			<job-class>com.rbt.timerTask.MemberVipShip</job-class>
		</job-detail>
		<trigger>
			<cron>
				<name>triggerBackUpLogs</name>
				<group>groupFout</group>
				<job-name>UpdateMemberVip</job-name>
				<job-group>groupFour</job-group>
				<cron-expression>0 0 1 1 1 ? *</cron-expression>
			</cron>
		</trigger>
	</job>
	<job>
		<job-detail>
			<name>triggerBackUpLogs</name>
			<mydescription>系统备份日记</mydescription>
			<group>groupFive</group>
			<job-class>com.rbt.timerTask.BackUpLogsJob</job-class>
		</job-detail>
		<trigger>
			<cron>
				<name>triggerBackUpLogs</name>
				<group>groupFive</group>
				<job-name>backUpLogs</job-name>
				<job-group>groupFive</job-group>
				<cron-expression>0 1 1 15 * ?</cron-expression>
			</cron>
		</trigger>
	</job>
</quartz>
